<section class="text-center">
  <main role="main">

    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Área administrativa do usuário, <%= current_user.email %></h1>
        <p class="lead text-muted">Nessa área administrativa é possível gerenciar todos as suas publicações de imóveis.</p>
        <p>
          <a href="#" class="btn btn-primary">Imóveis em alta</a>
        </p>
      </div>
    </section>

    <div class="album text-muted">
      <div class="container">


        <div class="row">
          <% @users_properties.each do |users_property| %>
          <div class="card col-4">
            <%= image_tag(users_property.image, width: "300px", height: "200px" ) %>
            <p class="card-text"><%= users_property.title %></p>
            <p class="card-text"><%= users_property.description %></p>
            <p class="card-text"><%= users_property.price %></p>
          </div>
          <% end %>

        </div>

      </div>
    </div>
  </main>
</section>
