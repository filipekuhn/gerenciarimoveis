<div class="windows-popup">
  <h2 class="windows-popup-title"><%= @title %></h2>
  <table class="table">
    <thead class="thead-default">
      <tr>
        <th>Título</th>
        <th>Endereço</th>
        <th>Tipo</th>
        <th>Preço</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |users_property| %>
        <tr>
          <td><%= users_property.title %></td>
          <td><%= users_property.address %></td>
          <td><%= users_property.flag %></td>
          <td><%= number_to_currency(users_property.price) %></td>

          <td><%= link_to 'Visualizar', users_property_path(users_property), class: 'btn btn-info' %></td>
          <td><%= link_to 'Editar', edit_users_property_path(users_property), class: 'btn btn-warning'  %></td>
          <td><%= link_to 'Excluir', users_property_path(users_property), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
