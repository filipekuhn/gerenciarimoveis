<div class="windows-popup">
  <h2 class="windows-popup-title"><%= @users_property.title %></h2  >
  <div class="container">
    <div class="row">
      <div class="col-4">
        <%= image_tag(@users_property.image, width: "100%") %>
      </div>
      <div class="col-8">

        <p>
          <strong>Description:</strong>
          <%= @users_property.description %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @users_property.price %>
        </p>

        <p>
          <strong>Type:</strong>
          <%= @users_property.flag %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @users_property.address %>
        </p>

        <a class="btn btn-secondary" href="#" role="button">View details &raquo;</a>
        <%= link_to 'Back', root_path, class: 'badge badge-warning' %>
      </div>
    </div>
  </div>
</div>
