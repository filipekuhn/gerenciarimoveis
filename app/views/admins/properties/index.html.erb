<section class="text-center">
<!-- Listagem de todos imóveis publicados para avaliação do administrador -->

<div class="card-group">
  <div class="row">
    <% @users_properties.each do |users_property| %>
    <div class="col-lg-4 public-card text-center">
      <div class="card">
        <% if users_property.pictures.empty? %>
          <%= image_tag('no-room.jpg', width: "300px", height: "200px", class: 'card-img-top' ) %>
        <% else %>
          <%= image_tag(users_property.pictures.first.image, width: "300px", height: "200px", class: 'card-img-top' ) %>
        <% end %>
        <div class="card-block">
          <h4 class="card-title"><%= users_property.title %></h4>
          <p class="card-text"><%= users_property.description %></p>
          <span> <%= users_property.address %> </span><br>
          <span> <%= users_property.flag %> </span><br>
          <span> <%= number_to_currency(users_property.price) %> </span><br>
          <%= link_to 'Visualizar', admins_user_property_path(user_id: users_property.user_id, id: users_property.id), class: 'btn btn-primary' %>
          <%= link_to 'Editar', edit_admins_user_property_path(user_id: users_property.user_id, id: users_property.id), class: 'btn btn-warning' %>
          <%= link_to 'Excluir', admins_user_property_path(user_id: users_property.user_id, id: users_property.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
        <div class="card-footer">
          <!--<small class="text-muted">Last updated 3 mins ago</small>-->
          <small class="text-muted"><%= users_property.updated_at.strftime("Atualizado em %d/%m/%Y às %H:%M") %></small>
        </div>
      </div>
    </div>
    <% end %>
  </div><!-- /.row -->
</div>
<div class="public-card">
  <%= will_paginate(@users_properties, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %>
</div>
</section>
